<div id="mobile_nav_container" class="mobile-nav-container no-desktop">
  <div class="mobile-nav-wrapper">
    <ul class="mobile-nav-list bold">
      {% for block in section.blocks %}
      {% for link in linklists[block.settings.nav_list_lower].links %}
      <li class="mobile-nav-link">
        <a href="{{link.url}}">{{link.title}}</a>
        <span class="yellow-down-chevron">
          {% render 'icon-yellow-down-chevron' %}
        </span>
      </li>
      {% endfor %}
      {% endfor %}

    </ul>
    <ul class="mobile-nav-list-2 light">
      {% for block in section.blocks %}
      {% for link in linklists[block.settings.nav_list].links %}
      <li class="">
        <a href="{{link.url}}">{{link.title}}</a>
      </li>
      {% endfor %}
      {% endfor %}
    </ul>
    <ul class="mobile-nav-footer light">
      <li class="customer-account">
        {% if customer %}
        <a href="/account" class="user-icon">{% render 'icon-user' %}</a>
        <div class="user-login-status">
          <a href="/account">{{ customer.first_name }}</a>
        </div>
        {% else %}
        <a href="/account/login" class="user-icon">{% render 'icon-user' %}</a>
        <div class="user-login-status">
          <a href="/account/login">Aanmelden/registreren/Account</a>
        </div>
        {% endif %}
      </li>
      <li class="right-nav-list dropdown lang bold no-translate">
        
        <ul class="header-nav-list-sub lang-selector">
          <li id="lang-nl">
            <a href="#Weglot-nl" class="no-translate">NL</a>
          </li>
          <li id="lang-en">
            <a href="#Weglot-en" class="no-translate">EN</a>
          </li>
          <li id="lang-de">
            <a href="#Weglot-de" class="no-translate">DE</a>
          </li>
          <li id="lang-ar">
            <a href="#Weglot-ar" class="no-translate">AR</a>
          </li>
          <li id="lang-fr">
            <a href="#Weglot-fr" class="no-translate">FR</a>
          </li>
          <li id="lang-es">
            <a href="#Weglot-es" class="no-translate">ES</a>
          </li>
          {% comment %}
          {% for locale in shop.published_locales %}   
          {% unless request.locale.iso_code == locale.iso_code  %}
          <li>
            <a href="{{ shop.url }}{{locale.root_url}}">{{ locale.iso_code | upcase }}</a>
          </li>
          {% endunless %}
          {% endfor %}
          {% endcomment %}
        </ul>
      </li>
      <li class="mobile-nav-langs">        
        {% for locale in shop.published_locales %}   
        <span class="{% if request.locale.iso_code == locale.iso_code  %}active{% endif %}">
          <a href="{{ shop.url }}{{locale.root_url}}">{{ locale.iso_code | upcase }}</a>
        </span>
      {% endfor %}
      </li>
      <li class="mobile-nav-social-icons">
        <a href="{{ settings.social_facebook_link }}" target="_blank"><span>{% render 'facebook' %}</span></a>
        <a href="{{ settings.social_instagram_link }}" target="_blank"><span>{% render 'instagram' %}</span></a>
      </li>
    </ul>
  </div>
</div>