<div class="grid-wrapper container">
  <div class="collage-grid flex-box justify-between">
    <div id="order_list-tab" class="order_list-tab no-mobile">
      <div class="tab-wrapper">
        <div class="tab-container">
          {%- for order in customer.orders -%}
          <div class="detail-block">
            <div class="list-header">
              <div class="date">{{ order.created_at | time_tag: format: 'date' }}</div>
              <div class="price">{{ order.total_price | money }}</div>
            </div>
            <p>BE 012 345 678</p>
            <p class="flex-box justify-between">
              In behandeling <a href="{{ order.customer_url }}" class="underline-link">Details >></a>
            </p>
          </div>
          {%- endfor -%}
        </div>
      </div>
      <div class="text-over-grid bold">BESTELLINGEN</div>
    </div>
    <div class="grid-right single-order-details ">
      <div class="product-list-wrapper">
        <div class="detail-header">BESTELLING: BE 012 345 678</div>
        <div class="product-list">
          {%- for line_item in order.line_items -%}
          <div class="product-block">
            <a href="{{ line_item.product.url }}" class="product-img">
              <img class="cart-item__image"
                   src="{{ line_item.image | img_url: '150x' }}"
                   alt="{{ line_item.title | escape }}"
                   loading="lazy"
                   width="75"
                   height="{{ 75 | divided_by: item.image.aspect_ratio | ceil }}"
                   >
            </a>
            <div class="product-info">
              <a href="{{ line_item.product.url }}" class="product-name">{{ line_item.title }}</a>
              <div class="product-variant">
                {%- unless line_item.product.has_only_default_variant -%}
                <span>
                  {{ line_item.variant.title }}
                </span>
                {%- endunless -%} 
                <span class="count">Aantal: {{ line_item.quantity }}</span></div>
              <div class="product-price"> 
                {%- if line_item.compare_at_price -%}<span class="compare-at-price">{{ line_item.compare_at_price | money }}</span>{%- endif -%} 
                <span class="discount-price">{{ line_item.original_price | money}}</span>
              </div>
            </div>
          </div>
          {%- endfor -%}

        </div>
        <div class="double-down-arrow no-desktop">{% render "icon-yellow-down-chevron" %}{% render "icon-yellow-down-chevron" %}</div>
        <div class="close-btn no-desktop">{% render "icon-close-1" %}</div>
      </div>

    </div>
  </div>
</div>








