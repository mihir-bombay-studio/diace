{{ 'artboard.css' | asset_url | stylesheet_tag }}

<div class="container filtered-container">
  {% for block in section.blocks %}
  <div class="artboard">
    <div class="art-image">
      <a href="">
        <img alt="Art Image" class="artimage" loading="lazy" src="{{ block.settings.artphoto | img_url: 'master' }}">
      </a>
      <div class="hero-hover-text flex-box align-center">
        <span class="plus-icon">{% include 'icon-yellow-plus' %}</span>
        <a href="{{ block.settings.hero_text_link }}" class="hover-text bold">{{ block.settings.hero_other_img_text }}</a>
      </div>
    </div>
    <div class="art-content">
      <div class="post">{{block.settings.heading}}</div>
      <div class="role">{{block.settings.Subtext}}</div>
    </div>
  </div>
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Artboard",
    "settings": [],
	"blocks": [
		{
          "type": "artboard",
		  "name": "Artboard",
		  "settings": [
			
			{
              "type": "image_picker",
              "id": "artphoto",
              "label": "Image"
            },
			{
              "type": "text",
              "id": "heading",
              "label": "Heading"
            },
			{
              "type": "text",
              "id": "Subtext",
              "label": "Subtext"
            },
            {
              "id": "hero_text_link",
              "type": "url",
              "label": "Hero Link"
            },
            {
              "id": "hero_other_img_text",
              "type": "text",
              "label": "Text Over Image"

            }
		  ]
        }
		
	],
	"presets": [
    {
      "name": "Artboard"
    }
  ]
  }
{% endschema %}

