{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "type": "text",
      "id": "faq_heading",
      "label": "FAQ Heading"
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ",
      "limit": 5,
      "settings": [
        {
          "id": "question",
          "type": "text",
          "label": "Question"

        },
		{
          "id": "answer",
          "type": "text",
          "label": "Answer"

        }
      ]
    },
	{
          "type": "button",
          "name": "Button",
          "limit": 1,
          "settings": [
            {
              "type": "text",
              "id": "button_label",
              "default": "Button label",
              "label": "t:sections.image-with-text.blocks.button.settings.button_label.label",
              "info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
            },
            {
              "type": "url",
              "id": "button_link",
              "label": "t:sections.image-with-text.blocks.button.settings.button_link.label"
            },
            {
              "type": "select",
              "id": "button-color",
              "options": [
                {
                  "value": "grey",
                  "label": "Grey"
                },
                {
                  "value": "yellow",
                  "label": "Yellow"
                }
              ],
              "default": "grey",
              "label": "Grey"
            }
          ]
        },
		{
          "type": "cta",
          "name": "CTA",
          "limit": 1,
          "settings": [
            {
              "type": "text",
              "id": "cta_label",
              "default": "CTA label",
              "label": "CTA label",
              "info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
            },
            {
              "type": "url",
              "id": "cta_link",
              "label": "CTA link"
            }
          ]
        }
  ],
  "presets": [
    {
      "name": "FAQ",
		"category":"section"
    }
  ]
}
{% endschema %}
