{% render 'hs-defer-css' with filename: 'product-collection.css', pages: 'collection,index,product' | split: ',', minify: true, local: true %}

{% assign product_handle = section.settings.featured_collection %}

<div class="porduct-collection-wrapper container">
  <div class="product-collection flex-box">
    {% for product in collections[product_handle].products %}
    <a href = "{{product.url}}">
      <div class="product-collection-card">
        <div class="featured-product-img rel">
          <a href="{{product.url}}"> <img class="product-img hs-id-aec43c21 lazyload hs-lazyload" data-src="{{ product.featured_image.src | img_url: 'x282' }}" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="></a>
          <a href="{{product.url}}">
          <div class="product-hover-text flex-box align-center">
            <span class="plus-icon">{% include 'icon-yellow-plus' %}</span>
            <a href="{{product.url}}" class="hover-text bold">{{ section.settings.hover_text }}</a>
          </div>
          </a>
        </div>
        <a href="" class="collection-btn">{{product_handle}}</a>
      </div>
    </a>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Product Collection",
    "settings": [
		{
          "type": "collection",
          "id": "featured_collection",
          "label": "Featured Collection"
        },
		{
			"type": "text",
			"id": "hover_text",
			"label": "Hover Text",
			"default": "KOPEN"
		}
	],
  "presets": [
    {
      "name": "Product Collection",
		"category":"section"
    }
  ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

