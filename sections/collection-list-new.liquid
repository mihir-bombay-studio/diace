{% render 'hs-defer-css' with filename: 'product-collection.css', pages: 'collection,index,product' | split: ',', minify: true, local: true %}

<div class="porduct-collection-wrapper container">
  <div class="product-collection flex-box">
    {% for collection in collections %}
    {% if collection.image %}
    <a href = "{{collection.url}}">
      <div class="product-collection-card">
        <div class="featured-product-img rel">
          <a href="{{collection.url}}"> 
            <img class="product-img lazyload hs-lazyload hs-id-54b50e83" data-src="{{ collection.image | img_url: 'x282' }}" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="></a>
          <a href="{{collection.url}}">
          <div class="product-hover-text flex-box align-center">
            <span class="plus-icon">{% include 'icon-yellow-plus' %}</span>
            <a href="{{collection.url}}" class="hover-text bold">{{collection.title}}</a>
          </div>
          </a>
        </div>
        <a href="" class="collection-btn">{{collection.title}}</a>
      </div>
    </a>
    {% endif %}
    {% endfor %}
  </div>
</div>

