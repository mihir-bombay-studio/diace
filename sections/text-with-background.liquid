{{ 'text-with-background.css' | asset_url | stylesheet_tag }}

<div class="text-background">
  <div class="back-btn">
    <a class="back-btn" href="#">{% include "back-icon"%} Terug</a> 
  </div>
  <div class="heading-container">
    {{section.settings.text}}
  </div>
</div>
<div class="container content-container">
  <div class="text-content">
    <div class="text-description">
      {{section.settings.description}}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Text with Background",
    "settings": [
		{
          "id": "text",
          "type": "text",
          "label": "Heading"
        },
		{
          "id": "description",
          "type": "html",
          "label": "Content"
        }
	
	],
	"presets": [
    {
      "name": "Text with Background"
    }
  ]
  }
{% endschema %}

