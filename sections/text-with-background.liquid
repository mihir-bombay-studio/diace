{{ 'text-with-background.css' | asset_url | stylesheet_tag }}

<div class="text-background">
  <div class=" back-btn {% if section.settings.show_btn == false %} no-disp {% endif %} ">
    <a class="" href="{{section.settings.link_url}}">{% include "back-icon"%} {{section.settings.link_text}}</a> 
  </div>
  <div class="text-background">
  <div class=" back-btn  ">
    <a class="" href="/pages/join-our-team"><svg xmlns="http://www.w3.org/2000/svg" width="10.828" height="6.414" viewBox="0 0 10.828 6.414"><defs><style>.chevron-a{fill:none;stroke:#737373;stroke-linecap:round;stroke-linejoin:round;stroke-width:2px;}</style></defs><path class="chevron-a" d="M7431,3152l4,4,2.333-2.333L7439,3152" transform="translate(-7429.585 -3150.585)"></path></svg> Terug</a> 
  </div>
  <div class="heading-container">
    {{section.settings.text}}
  </div>
</div>
<div class="container content-container {% if section.settings.btm_padding %} btm_padding {% endif %}">
  <div class="text-content">
    <div class="text-description">
      {{section.settings.description}}
    </div>
  </div>
</div>
<button class="go-up">{% render "icon-yellow-down-chevron" %}</button>



{% schema %}
  {
    "name": "Text with Background",
    "settings": [
		{
          "id": "text",
          "type": "text",
          "label": "Heading"
        },
		{
          "id": "description",
          "type": "html",
          "label": "Content"
        },
		{
          "id": "show_btn",
          "type": "checkbox",
          "label": "Show back Link",
		  "default" : false
        },
		{
          "id": "link_text",
          "type": "text",
          "label": "Link Text",
		  "default" : "Terug"
        },
		{
          "id": "link_url",
          "type": "url",
          "label": "Link Url"
        },
		{
          "id": "btm_padding",
          "type": "checkbox",
          "label": "Add Bottom Padding",
		  "default" : true
        }

	
	],
	"presets": [
    {
      "name": "Text with Background"
    }
  ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

