{{ 'text-with-background.css' | asset_url | stylesheet_tag }}

<div class="text-background">
  <div class=" back-btn {% if section.settings.show_btn == false %} no-disp {% endif %} ">
    <a class="" href="{{section.settings.link_url}}">{% include "back-icon"%} {{section.settings.link_text}}</a> 
  </div>
  <div class="heading-container">
    text-background {
    position: relative!important;
    background-color: #ffc23b;
    height: 220px;
    {{section.settings.text}}
  </div>
</div>
<div class="container content-container {% if section.settings.btm_padding %} btm_padding {% endif %}">
  <div class="text-content">
    <div class="text-description">
      {{section.settings.description}}
    </div>
  </div>
</div>
<button class="go-up">{% render "icon-yellow-down-chevron" %}</button>



{% schema %}
  {
    "name": "Text with Background",
    "settings": [
		{
          "id": "text",
          "type": "text",
          "label": "Heading"
        },
		{
          "id": "description",
          "type": "html",
          "label": "Content"
        },
		{
          "id": "show_btn",
          "type": "checkbox",
          "label": "Show back Link",
		  "default" : false
        },
		{
          "id": "link_text",
          "type": "text",
          "label": "Link Text",
		  "default" : "Terug"
        },
		{
          "id": "link_url",
          "type": "url",
          "label": "Link Url"
        },
		{
          "id": "btm_padding",
          "type": "checkbox",
          "label": "Add Bottom Padding",
		  "default" : true
        }
	
	],
	"presets": [
    {
      "name": "Text with Background"
    }
  ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

