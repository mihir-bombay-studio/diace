{% render 'hs-defer-css' with filename: 'footer.css', pages: 'collection,index,product' | split: ',', minify: true, local: true %}

<footer>
  <div class="container footer-wrapper">
    <div class="footer-upper flex-box justify-between">
      <div class="footer-left footer-part">
        <a href="/" class="brand-logo-footer">
          {% if section.settings.footer_brand_img != blank %}
          <img
               srcset="{% if section.settings.footer_brand_img.width >= 160 %}{{ section.settings.footer_brand_img | img_url: '160x' }} 160w,{% endif %}
                       {% if section.settings.footer_brand_img.width >= 210 %}{{ section.settings.footer_brand_img | img_url: '210x' }} 210w{% endif %}"
               src="{{ section.settings.footer_brand_img | img_url : "medium" }}" loading="lazy" alt="">
          {% else %}{{ section.settings.footer_brand_svg }}{% endif %}
        </a>
        <div class="footer-address">
          {% for block in section.blocks %}
          {% if block.type == "Footer_address" %}
          <div>{{ block.settings.address_line1 }}</div>
          <div>{{ block.settings.address_line2 }}</div>
          <div>{{ block.settings.address_line3 }}</div>
          {% endif %}
          {% endfor %}
        </div>
        <div class="btw">
          {% for block in section.blocks %}
          {% if block.type == "btw" %}
          {{ block.settings.btw_text }}
          {% endif %}
          {% endfor %}
        </div>
        <div class="mailto-email">
          {% for block in section.blocks %}
          {% if block.type == "mailto" %}
          <a href="mailto:{{ block.settings.email }}">{{ block.settings.email }}</a>
          {% endif %}
          {% endfor %}
        </div>
        <div class="social-icons flex-box">
          {% for block in section.blocks %}
          {% if block.type == "Social_Icons" %}
          <div class="social-icon">
            <a href="{{block.settings.social_link}}" class="btn-footer-icons" target="_blank">
              {% if block.settings.social_icons != blank %}
              <img
                   srcset="{% if block.settings.social_icons.width >= 24 %}{{ block.settings.social_icons | img_url: '24x' }} {% endif %}"
                   src="{{ block.settings.social_icons | img_url : "icon" }}" loading="lazy" alt="">
              {% elsif block.settings.social_icons_svg != blank %}{{ block.settings.social_icons_svg }}
              {% else %}{{ 'lifestyle-2' | placeholder_svg_tag }}{% endif %}
            </a>
          </div>
          {% endif %}
          {% endfor %}
        </div>
      </div>
      <div class="footer-mid-left footer-part">
        <div class="footer-nav-title footer-title bold">{{ section.settings.footer_product_title }}</div>
        <ul class="footer-nav">
          {% for block in section.blocks %}
          {% if block.type == "Footer_menu" %}
          {% for link in linklists[block.settings.Menu1].links %}
          <li class="footer-nav-item hover-underline">
            <a href="{{ link.url }}" class="btn-footer">{{ link.title }}</a>
          </li>
          {% endfor %}
          {% endif %}
          {% endfor %}
        </ul>
      </div>
      <div class="footer-mid-right footer-part">
        <div class="footer-nav-title footer-title bold">{{ section.settings.footer_about_title }}</div>
        <ul class="footer-nav">
          {% for block in section.blocks %}
          {% if block.type == "Footer_menu" %}
          {% for link in linklists[block.settings.Menu2].links %}
          <li class="footer-nav-item hover-underline">
            <a href="{{ link.url }}" class="btn-footer">{{ link.title }}</a>
          </li>
          {% endfor %}
          {% endif %}
          {% endfor %}
        </ul>
      </div>
      <div class="footer-right footer-part">
        <div class="footer-help-title footer-title bold">{{ section.settings.footer_help_title }}</div>
        {% for block in section.blocks %}
        {% if block.type == "Footer_help" %}
        <div>{{ block.settings.help_para1 }}</div>
        <br>
        <div>{{ block.settings.help_para2 }}</div>
        {% endif %}
        {% endfor %}  
      </div>
    </div>
    <div class="footer-lower flex-box justify-between">
      <div class="footer-lower-left flex-box justify-between">
        <div class="copyright-text">
          {% for block in section.blocks %}
          {% if block.type == "copyright" %}
          {{ block.settings.copyright_text }}
          {% endif %}
          {% endfor %}
        </div>
        {% for block in section.blocks %}
        {% if block.type == "Footer_menu" %}
        {% for link in linklists[block.settings.Menu3].links %}
        <div class="footer-lower-nav-item">
          <a href="{{ link.url }}" class="btn-footer">{{ link.title }}</a>
        </div>
        {% endfor %}
        {% endif %}
        {% endfor %}
      </div>
      {% if section.settings.payment_enable %}
      <div class="footer-lower-right flex-box justify-between">        
        {%- for type in shop.enabled_payment_types -%}
        <div class="payment-method"> 
          {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
        </div>
        {%- endfor -%}
      </div>
      {% endif %}
    </div>
  </div>
  
  
