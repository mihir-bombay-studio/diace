.grid-wrapper {
    margin-bottom: 16px;
}

.grid-wrapper .logout-btn{
  font-size: 14px;
  text-decoration: underline;
  letter-spacing: 0.7px;
}

.text-over-grid.white-bg {
  background-color: #ffffff;
}

.grid-left, .grid-right, .tabcontent, .order_list-tab {
  width: 50%;
}

.collage-grid {
/*   gap: 16px; */
  min-height: 572px;
}

.grid-left, .tabcontent, .order_list-tab {
  min-height: 572px;
  border: 2px solid #FEC23B;
  border-radius: 8px;
  background-color: #ffffff;
  position: relative;
}

.welcome-tab {
  background-color: #FEC23B;
  width: 48.5%;
}

.tabcontent {
  display: none;
  width: 48.5%;
}

.text-over-grid {
  width: 50%;
  text-transform: uppercase;
  line-height: 24px;
  position: absolute;
  top: 52px;
  left: -2px;
  background-color: #FEC23B;
  padding: 20px 15.5px;
  letter-spacing: .8px;
  border-radius: 0 8px 8px 0;
  text-align: center;
}

.grid-right {
  flex-wrap: wrap;
  align-content: space-between;
}

.grid-part {
  border: 2px solid #FEC23B;
  border-radius: 8px;
  width: calc(50% - 8px);
  height: calc(50% - 8px);
  justify-content: center;
  cursor: pointer;
}

.grid-part:hover, .tablinks.active {
  background-color: #FEC23B33;
}

.grid-sub-block {
  width: 80%;
}

.grid-left-img {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* ================================================ */

.details-wrapper, .tab-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.details-container, .tab-container {
  /*     min-height: 288px; */
  min-width: 70%;
  padding-top: 52px;
}

.detail-block {
  padding: 16px 0;
  text-align: left;
  font: normal normal 300 16px/24px Myriad Pro;
  letter-spacing: 0px;
  color: #000000;
}

.detail-block p {
  margin: 0;
}

.detail-block:nth-child(even) {
  border-top: 1px solid #FEC23B;
  border-bottom: 1px solid #FEC23B;
}

.order_list-tab .detail-block {
  border-top: none;
  border-bottom: 1px solid #FEC23B;
}

.detail-header {
  font: normal normal bold 16px/24px Myriad Pro;
  letter-spacing: 0.8px;
  color: #000000;
  text-transform: uppercase;
  margin-bottom: 16px;
}

.underline-link {
  text-align: left;
  text-decoration: underline .5px;
  font: normal normal 300 16px/24px Myriad Pro;
  letter-spacing: 0px;
  color: #000000;
}

.detail-header .underline-link {
  margin-left: 18px;
}

/* =========================================== */

.list-header {
  font: normal normal 600 16px/24px Myriad Pro;
  display: flex;
  justify-content: space-between;
}

/* ======================================== */

.single-order-details {
  border: 2px solid #FEC23B;
  border-radius: 8px;
  background-color: #FFF3D7;
  display: flex;
  justify-content: center;
  align-items: center;
  align-content: center;
}

.single-order-details .detail-header {
  margin-bottom: 40px;
}

.product-list-wrapper {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 540px;
}

.product-list {
  width: 95%;
  display: flex;
  flex-direction: column;
  gap: 16px;
  overflow-y: auto;
  max-height: 39vh;
  padding: 0px 20px;
}

.product-block {
  display: flex;
  align-items: center;
  gap: 16px;
}

.product-block .product-img {
  width: 82px;
  height: 82px;
  border-radius: 8px;
  /*     border: 1px solid; */
  display: block;
}

.product-info {
  width: calc(100% - 98px);
  line-height: 24px;
  font-size: 16px;
  font-family: 'Myriad Pro';
}

.product-name, .discount-price, .product-variant .count {
  font-weight: 600;
}

.product-variant {
  display: flex;
  justify-content: space-between;
  font-weight: 300;
}

.compare-at-price {
  color: #737373;
  text-decoration: line-through;
  margin-right: 16px;
}

/* =============================== 
==================================MOBILE GRID ================
===================================== */
.mobile-grid {
  max-width: 540px;
  margin: 0 auto;
}

.mobile-grid .welcome-tab {
  border-radius: 8px;
}

.mobile-grid .grid-left-img {
  min-height: 230px;
  padding: 4rem 3rem;
}

.mobile-grid .customer-details-wrapper{
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.mobile-grid .accordion, .blank-accordion {
  background-color: transparent;
  color: #000000;
  cursor: pointer;
  padding: 18px;
  width: 100%;
  border: none;
  border-radius: 8px;
  text-align: center;
  outline: none;
  font-size: 15px;
  line-height: 23px;
  font-weight: bold;
  text-transform: uppercase;
  transition: background-color 0.4s ease;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 6px;
  font-family: 'Roboto', sans-serif;
  font-weight: 700;
  letter-spacing: 0.75px;
}

.customer-header {
  font-family: 'Roboto', sans-serif;
  font-weight: 700;
  letter-spacing: 0.75px;
  text-align: center;
  text-transform: uppercase;
  font-size: 16px;
}

.accordion-wrapper {
  border: 2px solid #fec23b;
  border-radius: 8px;
}

.mobile-grid .accordion:hover,
.mobile-grid .accordion.active {
  background-color: #fec23b33;
}

.mobile-grid .accordion.active {
  border-bottom: 2px solid #fec23b;
}

.mobile-grid .accordion:after {
  content: "";
  font-size: 10px;
  line-height: normal;
  margin-bottom: 4px;
}

.mobile-grid .accordion.active:after {
  content: "\2573";
}

.mobile-grid .panel {
  padding: 0 18px;
  background-color: transparent;
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.2s ease-out;
}



@media screen and (max-width: 992px) {


  .grid-wrapper {
    margin-bottom: 10.5rem;
  }

  .details-container, .tab-container {
    padding-top: 0;
    width: 100%;
  }
  .order_list .detail-block {
    border-top: none;
    border-bottom: 1px solid #fec23b;
  }
  .single-order-details {
    position: fixed;
    z-index: 10;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
  }
  
  .product-list{
    max-height: 70vh;
    width: 100%;
  }

  .double-down-arrow {
    display: flex;
    flex-direction: column;
    margin-top: 10px;
    cursor:pointer;
    transition: 300ms ease;
  }
  
  .double-down-arrow:hover{
  transform: translateY(10px);
  }
  
  .product-list-wrapper .close-btn {
    margin-top: 4rem;
  }

}